<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_all_select_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/grey100"
        android:orientation="vertical"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/fragment_all_radio_indicator_all"
                style="@style/fragment_all_radio_indicator"
                android:background="@color/black" />

            <View
                android:id="@+id/fragment_all_radio_indicator_normal"
                style="@style/fragment_all_radio_indicator"
                android:background="@color/normal"
                android:visibility="invisible" />

            <View
                android:id="@+id/fragment_all_radio_indicator_urgent"
                style="@style/fragment_all_radio_indicator"
                android:background="@color/urgent"
                android:visibility="invisible" />

            <View
                android:id="@+id/fragment_all_radio_indicator_daily"
                style="@style/fragment_all_radio_indicator"
                android:background="@color/daily"
                android:visibility="invisible" />

            <View
                android:id="@+id/fragment_all_radio_indicator_cold"
                style="@style/fragment_all_radio_indicator"
                android:background="@color/cold"
                android:visibility="invisible" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/fragment_all_radio_group"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/fragment_radio_button_all"
                style="@style/fragment_all_select_radio_button"
                android:checked="true"
                android:text="@string/type_all" />

            <RadioButton
                android:id="@+id/fragment_radio_button_normal"
                style="@style/fragment_all_select_radio_button"
                android:text="@string/type_normal" />

            <RadioButton
                android:id="@+id/fragment_radio_button_urgent"
                style="@style/fragment_all_select_radio_button"
                android:text="@string/type_urgent" />

            <RadioButton
                android:id="@+id/fragment_radio_button_daily"
                style="@style/fragment_all_select_radio_button"
                android:text="@string/type_daily" />

            <RadioButton
                android:id="@+id/fragment_radio_button_cold"
                style="@style/fragment_all_select_radio_button"
                android:text="@string/type_cold" />
        </RadioGroup>
    </LinearLayout>

    <com.example.todo.GestureRecyclerView
        android:id="@+id/recyclerView_all_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_all_select_bar"
        tools:listitem="@layout/todo_item" />
</androidx.constraintlayout.widget.ConstraintLayout>