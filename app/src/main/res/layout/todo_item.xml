<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/now_item_relative_layout"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="4dp">

        <ImageButton
            android:id="@+id/button_done"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_off"
            android:focusableInTouchMode="false" />

        <ImageView
            android:id="@+id/now_item_attr_imageview"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:layout_below="@id/button_done"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_shape_time_attr"
            android:visibility="invisible" />

        <TextView
            android:layout_width="38dp"
            android:layout_height="14dp"
            android:layout_below="@id/button_done"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="12dp"
            android:visibility="invisible"
            tools:text="today" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/now_item_status_bar"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="16dp"
        android:layout_marginRight="32dp"
        android:background="@color/urgent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:background="@color/grey20" />
</RelativeLayout>