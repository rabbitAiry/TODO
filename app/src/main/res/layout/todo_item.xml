<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <Space
        android:id="@+id/item_space"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" />

    <RelativeLayout
        android:id="@+id/item_relative_layout"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/item_space"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/item_button_done"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_off"
            android:focusableInTouchMode="false" />

        <ImageView
            android:id="@+id/item_daily_imageview"
            android:layout_width="36dp"
            android:layout_height="14dp"
            android:layout_below="@id/item_button_done"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_shape_time_attr"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_daily_text"
            android:layout_width="38dp"
            android:layout_height="14dp"
            android:layout_below="@id/item_button_done"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/daily"
            android:textSize="12sp"
            android:visibility="invisible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_content_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/item_to_urgent_button"
        android:layout_toRightOf="@id/item_relative_layout"
        android:gravity="center_vertical"
        android:maxLines="1"
        tools:text="吃饭睡觉打豆豆"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

    <ImageView
        android:id="@+id/item_to_urgent_button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@id/item_status_bar"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/item_status_bar"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="16dp"
        android:layout_marginRight="32dp"
        android:background="@color/urgent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:background="@color/grey20" />
</RelativeLayout>