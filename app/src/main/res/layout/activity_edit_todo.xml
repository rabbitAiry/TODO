<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Todo_Activity">

    <LinearLayout
        android:id="@+id/linearLayout_show_status"
        android:layout_width="12dp"
        android:layout_height="250dp"
        android:layout_marginLeft="48dp"
        android:orientation="vertical"
        android:paddingTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            style="@style/edit_todo_status_bar"
            android:background="@color/normal" />

        <ImageView
            style="@style/edit_todo_status_bar"
            android:background="@color/urgent" />

        <ImageView
            style="@style/edit_todo_status_bar"
            android:background="@color/cold" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup_select_category"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="28dp"
        android:paddingTop="24dp"
        android:paddingRight="10dp"
        app:layout_constraintLeft_toRightOf="@id/linearLayout_show_status"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/button_normal"
            style="@style/edit_todo_radio_button"
            android:checked="true"
            android:text="常规 normal" />

        <RadioButton
            android:id="@+id/button_urgent"
            style="@style/edit_todo_radio_button"
            android:text="加急 urgent" />

        <RadioButton
            android:id="@+id/button_cold"
            style="@style/edit_todo_radio_button"
            android:text="冷藏 cold" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView_description_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="40dp"
        android:text="描述："
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup_select_category" />

    <EditText
        android:id="@+id/editText_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="24dp"
        android:hint="在此添加"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView_description_tag" />

    <TextView
        android:id="@+id/textView_summit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/main_2dp_rectangle"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="确认"
        android:textColor="@color/dark100"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>