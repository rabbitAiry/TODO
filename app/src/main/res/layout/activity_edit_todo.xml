<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey10"
    tools:context=".AddTodoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_todo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/grey50">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="@string/edit_todo_label"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:textColor="@color/grey1"
            android:textStyle="italic" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="32dp"
        app:cardCornerRadius="10dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/grey1"

        android:layout_below="@id/edit_todo_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/edit_todo_title_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edit_todo_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginHorizontal="28dp"
                    android:layout_toLeftOf="@id/edit_todo_indicator"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textSize="26sp"
                    tools:text="吃饭" />

                <View
                    android:id="@+id/edit_todo_indicator"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="18dp"
                    android:layout_marginRight="28dp"
                    android:elevation="5dp"
                    tools:background="@color/urgent" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/edit_todo_status_layout"
                style="@style/edit_todo_status_list_layout"
                android:layout_width="10dp"
                android:layout_marginLeft="42dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_todo_title_layout">

                <ImageView
                    style="@style/todo_status_bar"
                    android:background="@color/normal" />

                <ImageView
                    style="@style/todo_status_bar"
                    android:background="@color/urgent" />

                <ImageView
                    style="@style/todo_status_bar"
                    android:background="@color/daily" />

                <ImageView
                    style="@style/todo_status_bar"
                    android:background="@color/cold" />

                <ImageView
                    style="@style/todo_status_bar"
                    android:background="@color/delete" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/edit_todo_radio_group"
                style="@style/edit_todo_status_list_layout"
                android:layout_width="160dp"
                android:layout_marginLeft="24dp"

                app:layout_constraintLeft_toRightOf="@id/edit_todo_status_layout"
                app:layout_constraintTop_toTopOf="@id/edit_todo_status_layout">

                <RadioButton
                    android:id="@+id/edit_todo_button_normal"
                    style="@style/edit_todo_radio_button"
                    android:checked="true"
                    android:text="@string/type_normal" />

                <RadioButton
                    android:id="@+id/edit_todo_button_urgent"
                    style="@style/edit_todo_radio_button"
                    android:text="@string/type_urgent" />

                <RadioButton
                    android:id="@+id/edit_todo_button_daily"
                    style="@style/edit_todo_radio_button"
                    android:text="@string/type_daily" />

                <RadioButton
                    android:id="@+id/edit_todo_button_cold"
                    style="@style/edit_todo_radio_button"
                    android:text="@string/type_cold" />

                <RadioButton
                    android:id="@+id/edit_todo_button_delete"
                    style="@style/edit_todo_radio_button"
                    android:text="@string/delete" />
            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/edit_todo_status_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/edit_todo_button_submit"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:background="@drawable/main_6dp_rectangle"
        android:text="@string/done"
        android:textSize="28sp"
        android:textColor="@color/grey100"
        android:gravity="center"
        android:elevation="6dp"
        android:layout_marginBottom="72dp"
        android:layout_marginRight="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>